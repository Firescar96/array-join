{
  "name": "array-join",
  "version": "2.0.0",
  "description": "Join (SQL-like) arrays of objects by a common key or with a custom match function.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iredchuk/array-join"
  },
  "main": "dist/bundle.js",
  "module": "index.js",
  "author": {
    "name": "Igor Redchuk",
    "email": "redchuk@gmail.com"
  },
  "keywords": [
    "array",
    "arrays",
    "join",
    "left-join",
    "util"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "ava",
    "lint": "standard",
    "build": "rollup index.js --format umd --name 'ArrayJoin' --output ./dist/bundle.js",
    "prepublish": "npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-preset-es2015": "^6.24.1",
    "rollup": "^0.41.6",
    "standard": "^10.0.2"
  },
  "ava": {
    "require": "babel-register",
    "babel": "inherit"
  },
  "standard": {
    "ignore": "dist/**/*.js"
  }
